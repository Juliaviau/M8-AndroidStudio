<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearNota"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DBCD8E"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_TitolNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="TÃ­tol de la nota"
            android:inputType="textPersonName"
            android:maxLength="36" />

        <ImageView
            android:id="@+id/ivBtn_AfegirNota"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_input_add" />

        <ImageView
            android:id="@+id/ivBtn_EliminarNota"
            android:layout_width="46dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/barraSeparadora"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8FCAC4B4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_MostraDia"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".5"
            android:text="dd/mm/aaaa"
            android:textAlignment="center"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_MostraHora"
            android:layout_width="7dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".2"
            android:fitsSystemWindows="false"
            android:text="hh:mm"
            android:textAlignment="center"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/btn_EscollirHora"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            app:srcCompat="@android:drawable/ic_menu_recent_history" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/barraSeparadora1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:orientation="vertical">
    </LinearLayout>


    <EditText
        android:id="@+id/Eet_ContingutNota"
        android:layout_width="match_parent"
        android:layout_height="574dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:hint="Contingut de la nota ..."
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

</LinearLayout>